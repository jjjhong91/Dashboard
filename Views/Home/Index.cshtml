@{
    ViewData["Title"] = "Home Page";
}

<div id="map"></div>
<div class="dashboard">
    <section id="statistics" class="dashboard-card">
        <h2>統計數據</h2>
        <div class="stat-container">
            <div>
                <div class="stat-value">500</div>
                <div class="stat-label">新增用戶</div>
            </div>
            <div>
                <div class="stat-value">10,000</div>
                <div class="stat-label">週訪問量</div>
            </div>
        </div>
        <div class="chart-container">
            <canvas id="statisticsChart"></canvas>
        </div>
    </section>

    <section id="user-growth" class="dashboard-card">
        <h2>用戶增長</h2>
        <div class="chart-container">
            <canvas id="userGrowthChart"></canvas>
        </div>
    </section>

    <section id="system-status" class="dashboard-card">
        <h2>系統狀態</h2>
        <div class="stat-container">
            <div>
                <div class="stat-value">99.9%</div>
                <div class="stat-label">系統運行時間</div>
            </div>
            <div>
                <div class="stat-value glow">正常</div>
                <div class="stat-label">當前狀態</div>
            </div>
        </div>
    </section>

    <section id="quick-actions" class="dashboard-card">
        <h2>快速操作</h2>
        <nav>
            <ul>
                <li><a href="#" class="btn"><i class="fas fa-user-plus"></i> 新增用戶</a></li>
                <li><a href="#" class="btn"><i class="fas fa-file-alt"></i> 生成報告</a></li>
                <li><a href="#" class="btn"><i class="fas fa-cog"></i> 系統設置</a></li>
            </ul>
        </nav>
    </section>
</div>